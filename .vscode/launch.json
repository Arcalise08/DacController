{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [{
        "name": "Pico Debug",
        "cwd": "${workspaceFolder}",
        "executable": "${workspaceFolder}\\build\\speakerparty.elf",
        "request": "launch",
        "type": "cortex-debug",
        "servertype": "openocd",
        "gdbPath": "arm-none-eabi-gdb",
        "device":"Pico2040",
        "configFiles": [
            "interface/picoprobe.cfg",
            "target/rp2040.cfg"
        ],
        "searchDir": [
            "C:\\VSARM\\sdk\\openocd_picoprobe\\tcl"
        ],
        "svdFile": "${env:PICO_SDK_PATH/src/rp2040/hardware_regs/rp2040.svd",
        "runToMain": true,
        "postRestartCommands": [
            "break main",
            "continue"
        ]
            
    }]
}